{% extends 'default.html.twig' %}

{% block main %}
    <form action="/posts" method="post">
        <div class="form-group">
            <label for="title">Заголовок</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Новый пост">
            <small id="emailHelp" class="form-text text-muted">Придумай заголовок</small>
        </div>
        <div class="form-group">
            <label for="name">Текст</label>
            <input type="text" class="form-control" id="name" name="content" placeholder="Text">
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
{% endblock %}